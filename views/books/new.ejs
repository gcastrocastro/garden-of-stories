<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <div id="nb-body">
    <form action="/books" method="POST" id="newbook">
        <label>
            Title:
            <input type="text" name="title">
        </label><br>
        <label>
            Author:
            <input type="text" name="author">
        </label><br>
        <label>
            Genre:
            <select name="genre">
                <option value="Adventure/Fantasy">Adventure/Fantasy</option>
                <option value="Fiction">Fiction</option>
                <option value="Nonfiction">Nonfiction</option>
                <option value="Young Adult">Young Adult</option>
                <option value="Personal Development">Personal Development</option>
                <option value="Mystery/Thriller">Mystery/Thriller</option>
                <option value="Biography/Memoir">Biography/Memoir</option>
                <option value="Children and Toddlers">Children and Toddlers</option>
            </select>
        </label><br>
        <label>
            ImageUrl:
            <input type="text" name="imageUrl">
        </label><br>
        <label>
            Age Range:
            <select name="ageRange">
                <option value="0-10">0-10</option>
                <option value="11-18">11-18</option>
                <option value="18+">18+</option>
            </select>
        </label><br>
        <button type="submit" id="newbook-btn">Add New Book</button>
    </form>
</div>
    <%- include('../partials/footer') %>
</body>
</html>